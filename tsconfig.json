{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "allowJs": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}