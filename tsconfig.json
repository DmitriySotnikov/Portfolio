{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "sourceMap": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}